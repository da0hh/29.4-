#include <iostream>
#include <vector>
#include <string>

class Talent
{
public:
	virtual std::string getDescription() = 0;
};

class Swimming : public Talent {
public:
	std::string getDescription() { return "Swim"; }
};

class Dancing : public Talent {
public:
	std::string getDescription() { return "Dance"; }
};

class Dog
{
	std::string name;
	std::vector<Talent*> talents;

public:
	Dog(const std::string _name) : name(_name) {}

	void addTalent(Talent* talent) { talents.push_back(talent); }
	void showTalents() {
		std::cout << "This is " << name << " and it has some talents:\n";
		for (auto talent : talents) {
			std::cout << "\tIt can “" << talent->getDescription() << "”\n";
		}
	}
};

int main() {
	setlocale(LC_ALL, "RU");
	Dog dog1("Steve");

	dog1.addTalent(new Swimming);
	dog1.addTalent(new Dancing);

	dog1.showTalents();
}

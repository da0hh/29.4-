#include <iostream>
#include <vector>

class Talent
{
protected:
	std::string name;
	std::vector<std::string> talent_animal;

	explicit Talent(const std::string& _name) : name(_name) {}

	virtual void addTalent(std::string talent) { talent_animal.push_back(talent); }

	virtual void showTalents() {
		std::cout << "This is " << name << " and it has some talents:\n";
		for (auto i = 0; i < talent_animal.size(); i++) {
			std::cout << "\tIt can “" << talent_animal[i] << "”\n";
		}
	}
};

class Dog : virtual public Talent
{
public:
	explicit Dog(const std::string& _name) : Talent(_name) {}

	virtual void addTalent(std::string talent) { talent_animal.push_back(talent); }

	virtual void showTalents() {
		std::cout << "This is " << name << " and it has some talents:\n";
		for (auto i = 0; i < talent_animal.size(); i++) {
			std::cout << "\tIt can “" << talent_animal[i] << "”\n";
		}
	}
};

int main() {
	setlocale(LC_ALL, "RU");
	Dog dog1("Steve");

	dog1.addTalent("Swim");
	dog1.addTalent("Dance");
	
	dog1.showTalents();
}
